---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
    pageTitle = 'Mournstera',
    pageDescription = 'Personal site.',
    pageImage = '/social-default.png',
    mainClass = '',
    isPost = false, // auto-hide outer h1 if true
} = Astro.props;
---

<html lang="en" data-theme="light">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} image={pageImage} />
    </head>
    <body>
        <Header />

        <main class={mainClass}>
            {!isPost && pageTitle && <h1>{pageTitle}</h1>}

            <section>
                <slot />
            </section>
            {
                Astro.slots.sidebar && (
                    <aside class="sidebar">
                        <slot name="sidebar" />
                    </aside>
                )
            }
        </main>

        <Footer />
    </body>
</html>
