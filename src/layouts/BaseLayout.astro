---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
    pageTitle = 'Mournstera',
    pageDescription = 'Personal site.',
    pageImage = '/social-default.png',
    mainClass = '',
} = Astro.props;
---

<html lang="en" data-theme="light">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} image={pageImage} />
    </head>
    <body>
        <Header />
        <main class={mainClass}>
            <section>
                {pageTitle && <h1>{pageTitle}</h1>}
                <slot />
            </section>
        </main>
        <Footer />
    </body>
</html>
