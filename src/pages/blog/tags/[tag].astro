---
// blog tags
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BlogPost from '../../../components/BlogPost.astro';
import BlogSidebar from '../../../components/BlogSidebar.astro';
import '../../../assets/styles/blog-index.css';
import { blogMeta } from '../../../assets/data/blog-meta';

export async function getStaticPaths() {
    const allPosts = await getCollection('blog');

    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

// current tag and posts from props
const { tag } = Astro.params;
const { posts } = Astro.props;

// all unique tags for nav
const allPosts = await getCollection('blog');

// gather unique tags and sort alphabetically (case-insensitive)
const tags = [
    'all',
    ...Array.from(new Set(allPosts.map((p) => p.data.tags).flat())).sort((a, b) =>
        a.localeCompare(b, 'en', { sensitivity: 'base' }),
    ),
];

// Capitalize current tag for display
const formattedTag = tag && tag !== 'all' ? tag.charAt(0).toUpperCase() + tag.slice(1) : '';

const pageTitle = blogMeta.title;

const seoTitle = !tag || tag === 'all' ? blogMeta.title : `${blogMeta.title} (${formattedTag})`;
---

<BaseLayout pageTitle={pageTitle} seoTitle={seoTitle} pageDescription={blogMeta.description}>
    <BlogSidebar
        slot="sidebar"
        tags={tags}
        currentTag={tag}
        basePath="/blog"
        className="tag-list blog"
    />

    <ul class="blog-list">
        {
            posts.map((post) => (
                <BlogPost
                    url={`/blog/${post.id}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                />
            ))
        }
    </ul>
</BaseLayout>
