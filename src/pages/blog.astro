---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import BlogSidebar from '../components/BlogSidebar.astro';
import { blogMeta } from '../assets/data/blog-meta';
import '../assets/styles/blog-index.css';

const allPosts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime(),
);

const tags = [
    'all',
    ...Array.from(new Set(allPosts.map((p) => p.data.tags).flat())).sort((a, b) =>
        a.localeCompare(b, 'en', { sensitivity: 'base' }),
    ),
];
---

<BaseLayout pageTitle={blogMeta.title} pageDescription={blogMeta.description}>
    <BlogSidebar
        slot="sidebar"
        tags={tags}
        currentTag="all"
        basePath="/blog"
        className="tag-list blog"
    />

    <ul class="blog-list">
        {
            allPosts.map((post) => (
                <BlogPost
                    url={`/blog/${post.id}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                />
            ))
        }
    </ul>
</BaseLayout>
