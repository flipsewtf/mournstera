---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import GardenPost from '../components/GardenPost.astro';
import GardenSidebar from '../components/GardenSidebar.astro';
import '../assets/styles/blog.css';

const allGarden = (await getCollection('garden')).sort(
    (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// gather unique tags and sort alphabetically (case-insensitive)
const tags = [
    'all',
    ...Array.from(new Set(allGarden.map((p) => p.data.tags).flat())).sort((a, b) =>
        a.localeCompare(b, 'en', { sensitivity: 'base' })
    ),
];

const pageTitle = 'Garden';
const pageDescription =
    'A garden of thoughts, musings, and ideas. Notes and observations - occasionally without rhyme or reason.';
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
    <GardenSidebar
        slot="sidebar"
        tags={tags}
        currentTag="all"
        basePath="/garden"
        className="tag-list garden"
        pageDescription={pageDescription}
    />

    <ul class="post-list">
        {
            allGarden.map((post) => (
                <GardenPost
                    url={`/garden/${post.id}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                />
            ))
        }
    </ul>
</BaseLayout>
