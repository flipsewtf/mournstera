---
// garden.astro
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import GardenPost from '../components/GardenPost.astro';
import GardenUpper from '../components/GardenUpper.astro';
import { gardenMeta } from '../assets/data/garden-meta';
import '../assets/styles/garden-index.css';

const allGarden = (await getCollection('garden')).sort(
    (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime(),
);

const tags = [
    'all',
    ...Array.from(new Set(allGarden.map((p) => p.data.tags).flat())).sort((a, b) =>
        a.localeCompare(b, 'en', { sensitivity: 'base' }),
    ),
];
---

<BaseLayout pageTitle={gardenMeta.title} pageDescription={gardenMeta.description} isPost={true}>
    <GardenUpper slot="upper-section" tags={tags} currentTag="all" />

    <ul class="garden-list">
        {
            allGarden.map((post) => (
                <GardenPost
                    url={`/garden/${post.id}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                />
            ))
        }
    </ul>
</BaseLayout>
