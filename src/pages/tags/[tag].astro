---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';

export async function getStaticPaths() {
    const allPosts = await getCollection('blog');

    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag) => {
        const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
        return {
            params: { tag },
            props: { posts: filteredPosts },
        };
    });
}

// current tag and posts from props
const { tag } = Astro.params;
const { posts } = Astro.props;

// all unique tags for nav
const allPosts = await getCollection('blog');
const tags = ['all', ...[...new Set(allPosts.map((p) => p.data.tags).flat())]];
---

<BaseLayout pageTitle="Blog">
    <nav aria-label="Blog tags">
        <ul class="tag-list">
            {
                tags.map((t) => (
                    <li>
                        <a
                            href={t === 'all' ? '/blog/' : `/tags/${t}`}
                            class={t === tag ? 'active' : null}
                            aria-current={t === tag ? 'page' : undefined}
                        >
                            {t}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>

    <ul class="post-list">
        {
            posts.map((post) => (
                <BlogPost
                    url={`/blog/${post.id}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                />
            ))
        }
    </ul>
</BaseLayout>

<style>
    ul.tag-list {
        display: flex;
        gap: var(--space-2);
        flex-wrap: wrap;
        margin-bottom: var(--space-9);
    }
    ul.tag-list li {
        display: flex;
    }
    ul.tag-list a {
        font-weight: 500;
        padding: var(--space-0) var(--space-1);
        color: var(--accent-secondary);
        background-color: var(--bg-accent);
        border: var(--1px) solid var(--accent-primary);
        text-decoration: none;
        border-radius: var(--radius-mn);
    }
    ul.tag-list a:hover {
        border-color: var(--accent-secondary);
        color: var(--bg-secondary);
        background-color: var(--accent-secondary);
    }
    ul.tag-list a.active {
        border-color: var(--border-secondary);
        color: var(--accent-secondary);
        background-color: var(--bg-secondary);
    }
</style>
