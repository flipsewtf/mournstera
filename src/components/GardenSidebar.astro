---
interface Props {
    tags: string[];
    currentTag: string;
    basePath: string;
    className?: string;
    pageDescription?: string;
}
const { tags, currentTag, basePath, className = '', pageDescription = '' }: Props = Astro.props;
---

<div class="sidebar-inner">
    <nav aria-label="Garden tags">
        <ul class={className}>
            {
                tags.map((tag) => (
                    <li>
                        <a
                            href={tag === 'all' ? basePath : `${basePath}/tags/${tag}`}
                            class={tag === currentTag ? 'active' : null}
                            aria-current={tag === currentTag ? 'page' : undefined}
                        >
                            {tag}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>

    <p class="sb-desc">{pageDescription}</p>
</div>
<style>
    p.sb-desc {
        font-size: var(--text-sm);
    }
</style>
