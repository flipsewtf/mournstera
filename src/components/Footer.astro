---
import Bluesky from './icons/Bluesky.svg';
import Threads from './icons/Threads.svg';
import Github from './icons/Github.svg';
---

<footer class="site-footer">
    <div class="site-footer-inner">
        <nav aria-label="Footer navigation">
            <ul id="footer-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/bag/">Bag</a></li>
                <li><a href="/blog/">Blog</a></li>
            </ul>
        </nav>

        <nav class="social" aria-label="Social links">
            <a
                href="https://bsky.app/profile/mournstera.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Bluesky"
            >
                <Bluesky />
            </a>
            <a
                href="https://www.threads.com/@flipse.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Threads"
            >
                <Threads />
            </a>
            <a
                href="https://github.com/flipsewtf"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on GitHub"
            >
                <Github />
            </a>
        </nav>
    </div>
</footer>

<style>
    footer.site-footer {
        width: 100%;
        max-width: var(--main-width);
        margin: 0 auto;
        padding: 0 var(--space-lg);
    }

    .site-footer-inner {
        display: flex;
        gap: var(--space-md);
        justify-content: space-between;
        align-items: flex-start;
        border-top: var(--border) solid var(--border-color);
        padding: var(--space-lg) 0;
        flex-wrap: wrap;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-sm);
    }
    ul#footer-menu {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        font-weight: 500;

        li {
            display: inline-flex;
        }
    }

    nav.social {
        display: flex;
        flex-wrap: wrap;
    }

    nav.social a {
        padding: 0 0.25rem;
        display: inline-flex;
    }
</style>
