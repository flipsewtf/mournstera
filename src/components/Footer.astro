---
import Bluesky from './icons/Bluesky.svg';
import Instagram from './icons/Instagram.svg';
import Github from './icons/Github.svg';
import Rss from './icons/Rss.svg';
---

<footer>
    <div class="footer-inner">
        <div class="footer-icons">
            <a
                class="rss"
                href="/rss.xml"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Subscribe via RSS"
            >
                <Rss /><span class="sr-only">Subscribe on RSS</span>
            </a>
            <nav class="social" aria-label="Social links">
                <a
                    href="https://bsky.app/profile/mournstera.me"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Follow on Bluesky"
                >
                    <Bluesky />
                </a>
                <a
                    class="insta"
                    href="https://www.instagram.com/mournstera/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Follow on Instagram"
                >
                    <Instagram />
                </a>
                <a
                    href="https://github.com/flipsewtf"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Follow on GitHub"
                >
                    <Github />
                </a>
            </nav>
        </div>

        <div class="info-other">
            <a href="/site-info/" aria-label="Read about build, transparancy and policy"
                >info
            </a>
        </div>
    </div>
</footer>

<style>
    a {
        color: var(--text-primary);
    }
    a:hover {
        color: var(--accent-primary);
    }

    footer {
        width: 100%;
        border-top: var(--1px) solid var(--border-primary);
    }

    .footer-inner {
        padding: var(--space-5) var(--layout-padding);
        display: flex;
        gap: var(--space-4);
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        max-width: var(--layout-width);
        margin: 0 auto;
    }

    .footer-icons {
        display: flex;
        gap: var(--space-4);
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
    }

    nav.social {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: var(--space-0);
    }

    nav.social a {
        padding: var(--2px);
        display: inline-flex;
        align-items: center;
    }

    nav.social a.insta {
        padding: var(--1px);
    }
    nav.social a.insta svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    a.rss {
        display: flex;
        align-items: center;
        gap: var(--space-0);
        border-radius: var(--3px);
        background-color: var(--bg-alt);
        color: var(--text-primary);
        padding: var(--3px);
        display: inline-flex;
        width: 1.5rem;
        height: 1.5rem;
    }
    a.rss:hover {
        background-color: var(--accent-primary);
        color: var(--bg-primary);
    }
    a.rss svg {
        stroke-width: 2.75;
        height: 100%;
        width: 100%;
    }
    .info-other {
        font-size: var(--p-sm);
        font-weight: 500;
    }
</style>
