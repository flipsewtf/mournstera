---
import Bluesky from './icons/Bluesky.svg';
import Threads from './icons/Threads.svg';
import Github from './icons/Github.svg';
import Recordclub from './icons/Recordclub.svg';
import Rss from './icons/Rss.svg';
---

<footer>
    <div class="footer-inner">
        <a
            class="rss"
            href="/rss.xml"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Subscribe via RSS"
        >
            <div class="svg-wrap"><Rss /></div>Join my adventures <span class="sr-only"
                >and subscribe on RSS</span
            >
        </a>

        <nav class="social" aria-label="Social links">
            <a
                href="https://bsky.app/profile/mournstera.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Bluesky"
            >
                <Bluesky />
            </a>
            <a
                href="https://www.threads.com/@flipse.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Threads"
            >
                <Threads />
            </a>
            <a
                href="https://record.club/mournstera"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Record.club"
            >
                <Recordclub />
            </a>
            <a
                href="https://github.com/flipsewtf"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on GitHub"
            >
                <Github />
            </a>
        </nav>
    </div>
</footer>

<style>
    a {
        color: var(--text-primary);
    }

    a:hover {
        color: var(--link-hover);
    }

    footer {
        width: 100%;
        margin: 0 auto;
        max-width: var(--layout-width);
        padding-inline: var(--layout-padding);
    }

    .footer-inner {
        padding-block: var(--space-5);
        background-image: repeating-linear-gradient(
            to right,
            var(--border-secondary) 0 7px,
            transparent 7px 10px
        );
        background-repeat: no-repeat;
        background-size: 100% 1px;
        background-position: top left;
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
    }

    nav.social {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: var(--space-0);
    }

    nav.social a {
        padding: var(--2px);
        display: inline-flex;
        align-items: center;
    }

    a.rss {
        display: flex;
        align-items: center;
        gap: var(--space-1);
        font-family: var(--font-mono);
        font-size: var(--p-sm);
        font-weight: 500;
    }

    a.rss:hover {
        text-decoration: underline;
        text-underline-offset: var(--underline-offset);
        text-decoration-thickness: var(--2px);
    }
    a.rss .svg-wrap {
        border-radius: var(--3px);
        background-color: var(--bg-alt);
        color: var(--text-primary);
        padding: 0.25rem;
        display: inline-flex;
    }
    a.rss svg {
        stroke-width: 2.5;
        height: 1.125rem;
        width: 1.125rem;
    }
</style>
