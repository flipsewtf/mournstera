---
import Bluesky from './icons/Bluesky.svg';
import Threads from './icons/Threads.svg';
import Github from './icons/Github.svg';
import Recordclub from './icons/Recordclub.svg';
import Rss from './icons/Rss.svg';
---

<footer>
    <div class="footer-inner">
        <nav aria-label="Footer navigation">
            <ul id="footer-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about/">About</a></li>
                <li><a href="/bag/">Bag</a></li>
                <li><a href="/blog/">Blog</a></li>
            </ul>
        </nav>

        <nav class="social" aria-label="Social links">
            <a
                href="https://bsky.app/profile/mournstera.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Bluesky"
            >
                <Bluesky />
            </a>
            <a
                href="https://www.threads.com/@flipse.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Threads"
            >
                <Threads />
            </a>
            <a
                href="https://record.club/mournstera"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Record.club"
            >
                <Recordclub />
            </a>
            <a
                href="https://github.com/flipsewtf"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on GitHub"
            >
                <Github />
            </a>
            <a
                class="rss"
                href="/rss.xml"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Subscribe via RSS"
            >
                <Rss />
            </a>
        </nav>
    </div>
    <div id="copyright">
        Â© <span id="year-range"></span> Flipse. All rights reserved.
    </div>
</footer>

<style>
    a {
        color: var(--color-text-muted);

        &:hover {
            color: var(--color-accent1);
        }
    }

    footer {
        width: 100%;
        max-width: var(--main-width);
        margin: 0 auto;
        padding: 0 var(--space-5) var(--space-5);
    }

    .footer-inner {
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: flex-start;
        border-top: var(--border-thin) solid var(--color-border);
        padding-top: var(--space-5);
        flex-wrap: wrap;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-2);
    }

    ul#footer-menu {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
        font-weight: 500;

        li {
            display: inline-flex;
        }
    }

    nav.social {
        display: flex;
        flex-wrap: wrap;
    }

    nav.social a {
        padding: 0 calc(var(--space-1) / 2);
        display: inline-flex;
        align-items: center;

        &:hover {
            color: var(--color-accent2);
        }
    }

    nav.social a.rss {
        border-radius: 0.1875rem;
        background-color: var(--color-text-muted);
        color: var(--color-bg);
        padding: 0.1875rem;
        display: inline-flex;
        margin-left: var(--space-2);

        svg {
            height: 0.875rem;
            width: 0.875rem;
            stroke-width: 2.5;
        }

        &:hover {
            background-color: var(--color-accent2);
            color: var(--color-bg);
        }
    }

    #copyright {
        margin-top: var(--space-3);
        font-size: 0.8125rem;
        color: var(--color-text-muted);
    }
</style>

<script>
    const startYear = 2025;
    const currentYear = new Date().getFullYear();
    const yearText = currentYear > startYear ? `${startYear}-${currentYear}` : `${startYear}`;
    document.getElementById('year-range')!.textContent = yearText;
</script>
