---
import Bluesky from './icons/Bluesky.svg';
import Threads from './icons/Threads.svg';
import Github from './icons/Github.svg';
import Recordclub from './icons/Recordclub.svg';
import Rss from './icons/Rss.svg';
---

<footer>
    <div class="footer-inner">
        <a
            class="rss"
            href="/rss.xml"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Subscribe via RSS"
        >
            <Rss /> Join my adventures <span class="sr-only">and subscribe on RSS</span>
        </a>

        <nav class="social" aria-label="Social links">
            <a
                href="https://bsky.app/profile/mournstera.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Bluesky"
            >
                <Bluesky />
            </a>
            <a
                href="https://www.threads.com/@flipse.me"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Threads"
            >
                <Threads />
            </a>
            <a
                href="https://record.club/mournstera"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on Record.club"
            >
                <Recordclub />
            </a>
            <a
                href="https://github.com/flipsewtf"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Follow on GitHub"
            >
                <Github />
            </a>
        </nav>
    </div>
</footer>

<style>
    a {
        color: var(--color-text-muted);

        &:hover {
            color: var(--color-accent1);
        }
    }

    footer {
        width: 100%;
        padding: var(--space-5);
        background-image: repeating-linear-gradient(
            to right,
            var(--color-border) 0 7px,
            transparent 7px 10px
        );
        background-repeat: no-repeat;
        background-size: 100% 1px;
        background-position: top left;
    }

    .footer-inner {
        margin: 0 auto;
        max-width: var(--layout-width-lg);
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: var(--space-2);
    }

    ul#footer-menu {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-2);
        font-weight: 500;

        li {
            display: inline-flex;
        }
    }

    nav.social {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    nav.social a {
        padding: 0 calc(var(--space-1) / 2);
        display: inline-flex;
        align-items: center;

        &:hover {
            color: var(--color-accent2);
        }
    }

    a.rss {
        display: flex;
        align-items: center;
        gap: var(--space-1);

        svg {
            border-radius: 0.25rem;
            background-color: var(--color-text-muted);
            color: var(--color-bg);
            padding: 0.25rem;
            stroke-width: 2.5;
            width: 1.5rem;
            height: 1.5rem;
        }

        &:hover {
            color: var(--color-accent1);
            text-decoration: underline;
            text-decoration-style: wavy;
            text-decoration-color: var(--color-text);
            text-decoration-thickness: var(--border-thin);
        }
    }
</style>
