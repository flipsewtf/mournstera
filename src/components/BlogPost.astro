---
import { DateClock } from '../components/icons';
const { url, title, description, pubDate } = Astro.props;
---

<li class="blog-list">
    <article class="post-list">
        <a href={url}>
            <h2>{title}</h2>
        </a>
        {description && <p class="post-description">{description}</p>}
        <div class="date-wrap">
            <DateClock />

            {
                pubDate && (
                    <time datetime={pubDate.toISOString()} class="post-date">
                        {pubDate.toLocaleDateString('en-GB', {
                            day: 'numeric',
                            month: 'long',
                            year: 'numeric',
                        })}
                    </time>
                )
            }
        </div>
    </article>
</li>
