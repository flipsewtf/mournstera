<style>
    /* ----- Section layout ----- */
    section {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }

    /* ----- Desktop image ----- */
    img.welcome-desk {
        width: 100%;
        height: 100%;
        max-height: 100%;
        max-width: 100%;
        border-radius: var(--radius-md);
        object-fit: cover;
        display: block;
        aspect-ratio: 6 / 5;
        border: var(--border) solid hsl(var(--border-color));
    }

    :global([data-theme='dark']) img.welcome-desk {
        filter: brightness(0.88);
    }

    /* Typography */
    h1 {
        font-size: 1.5625rem;
    }

    h2 {
        font-size: 1.0625rem;
        font-weight: 500;
        margin: 1rem 0 var(--typo-margin) 0;
    }

    p {
        line-height: var(--line-height);
        margin: var(--typo-margin) 0;
    }

    /* Links inside paragraphs  */
    .intro-text p a {
        text-decoration: underline;
        text-underline-offset: 0.125rem;

        &:hover {
            text-decoration-style: wavy;
            text-decoration-color: hsl(var(--text-primary));
        }
    }

    /*  sparkle */
    .flipse {
        position: relative;
        display: inline-block;
        line-height: 1;
    }

    .sparkles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* don't block text */
    }

    .sparkles svg {
        position: absolute;
        width: 1.75rem;
        height: 1.75rem;
        transform: translate(-50%, -50%) scale(0);
        opacity: 0;
    }

    .flipse svg path {
        stroke: transparent;
        stroke-width: 0;
    }

    /* unique positions & scales */
    .sparkles svg:nth-of-type(1) {
        --x: 15;
        --y: 0;
        --s: 1.15;
        top: calc(var(--y) * 1%);
        left: calc(var(--x) * 1%);
    }

    .sparkles svg:nth-of-type(2) {
        --x: 45;
        --y: 80;
        --s: 1;
        top: calc(var(--y) * 1%);
        left: calc(var(--x) * 1%);
    }

    .sparkles svg:nth-of-type(3) {
        --x: 100;
        --y: 30;
        --s: 0.75;
        top: calc(var(--y) * 1%);
        left: calc(var(--x) * 1%);
    }

    .sparkle-boop svg:nth-of-type(1) {
        animation: sparkle 0.85s 0s both;
    }

    .sparkle-boop svg:nth-of-type(2) {
        animation: sparkle 0.85s 0.15s both;
    }

    .sparkle-boop svg:nth-of-type(3) {
        animation: sparkle 0.85s 0.3s both;
    }

    @keyframes sparkle {
        0% {
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
        }
        50% {
            transform: translate(-50%, -50%) scale(var(--s, 1));
            opacity: 1;
        }
        100% {
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
        }
    }

    /*  ------------ Scrobble */
    #scrobble {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 0.4rem;
    }

    .track {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        display: inline-block;
        line-height: 1.3;
    }

    .vinyl-wrap {
        animation: spin 8s linear infinite;
        transform-origin: 50% 50%;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        will-change: transform;
    }

    #scrobble svg {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
        stroke-width: 1.6;
        filter: blur(0.05px);
    }

    #scrobble:hover .vinyl-wrap {
        animation-play-state: paused;
    }

    @keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360.1deg);
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .vinyl-wrap {
            animation: none;
        }
    }

    /* ----- Responsive / Media Queries -----  */
    @media (min-width: 425px) {
        #scrobble {
            flex-wrap: nowrap;
        }
    }

    @media (min-width: 570px) {
        section {
            grid-template-columns: auto 1fr;
            gap: 3rem;
        }

        img.welcome-desk {
            max-width: 200px;
            border-radius: 9999px;
            aspect-ratio: 8 / 16;
        }
    }
</style>
<script src="/scripts/scrobble.js" defer></script>
<script is:inline>
    const flipse = document.querySelector('.flipse');
    const sparkles = flipse.querySelector('.sparkles');

    flipse.addEventListener('mouseenter', () => {
        sparkles.classList.add('sparkle-boop');

        setTimeout(() => {
            sparkles.classList.remove('sparkle-boop');
        }, 1200);
    });
</script>
