    /*  --- sparkle */
    .flipse {
        position: relative;
        display: inline-block;
        line-height: 1;
    }

    .sparkles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none; /* hey don't block text */
    }

    .sparkles svg {
        position: absolute;
        width: 1.75rem;
        height: 1.75rem;
        transform: translate(-50%, -50%) scale(0);
        opacity: 0;
        top: calc(var(--y) * 1%);
        left: calc(var(--x) * 1%);
    }

    .flipse svg path {
        stroke: transparent;
        stroke-width: 0;
    }

    .sparkles svg:nth-of-type(1) {
        --x: 15;
        --y: 0;
        --s: 1.15;
    }

    .sparkles svg:nth-of-type(2) {
        --x: 45;
        --y: 80;
        --s: 1;
    }

    .sparkles svg:nth-of-type(3) {
        --x: 100;
        --y: 30;
        --s: 0.75;
    }

    .sparkle-boop svg:nth-of-type(1) {
        animation: sparkle 0.85s 0s both;
    }

    .sparkle-boop svg:nth-of-type(2) {
        animation: sparkle 0.85s 0.15s both;
    }

    .sparkle-boop svg:nth-of-type(3) {
        animation: sparkle 0.85s 0.3s both;
    }

    @keyframes sparkle {
        0% {
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
        }
        50% {
            transform: translate(-50%, -50%) scale(var(--s, 1));
            opacity: 1;
        }
        100% {
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
        }
    }

    /* ----- Media Queries */
    @media (prefers-reduced-motion: reduce) {
        .sparkle-boop {
            animation: none;
            opacity: 0;
        }
    }
    @media (min-width: 425px) {
        #scrobble {
            flex-wrap: nowrap;
        }
