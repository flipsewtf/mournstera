---
import ThemeToggle from './ThemeToggle.astro';
---

<header>
    <div class="header-inner">
        <a class="home" href="/" aria-label="Go to homepage">Mournstera<span>.</span></a>

        <div class="header-right">
            <nav>
                <ul id="header-menu">
                    <li>
                        <a class="mobile" href="/">Home</a>
                    </li>

                    <li>
                        <a href="/about/">About</a>
                    </li>
                    <li>
                        <a href="/bag/">Bag</a>
                    </li>
                    <li>
                        <a href="/blog/">Blog</a>
                    </li>
                </ul>
            </nav>
            <ThemeToggle />
        </div>
    </div>
</header>

<style>
    /* HEADER */
    header {
        width: 100%;
        border-bottom: var(--border) dashed hsl(var(--border-color));
        background-color: hsl(var(--bg-secondary) / 0.9);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 200;
        padding: 0 var(--space-lg);
    }

    .header-inner {
        max-width: var(--main-width);
        margin: 0 auto;
        padding: 20px 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    a.home {
        display: none;
        font-weight: 700;
        font-size: 1.25rem;

        span {
            color: hsl(var(--text-primary));
        }
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: var(--space-lg);
        justify-content: space-between;
        width: 100%;
    }

    ul#header-menu {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-md);
        font-weight: 600;

        li {
            display: inline-flex;
        }
    }
    @media (min-width: 640px) {
        a.mobile {
            display: none;
        }
        a.home {
            display: block;
        }
        ul#header-menu {
            flex-wrap: wrap;
        }
        .header-right {
            justify-content: flex-end;
            width: auto;
        }
    }
</style>
