---
import ThemeToggle from './ThemeToggle.astro';
import MegaMenu from './MegaMenu.astro';
import Bolt from './icons/Bolt.svg';
---

<header class="top">
    <a class="home" href="/">M<span>.</span> <span class="sr-only">Go to homepage</span></a>

    <div class="header-right" role="navigation" aria-label="Header controls">
        <MegaMenu />
        <a class="now-link" href="/now" aria-label="Currently"><Bolt /></a>
        <ThemeToggle />
    </div>
</header>

<style>
    a {
        color: var(--color-text);
    }

    header {
        width: 100%;
        position: sticky;
        top: 0;
        z-index: 200;
        background-color: var(--color-header);
        backdrop-filter: blur(12px);
        padding: var(--space-1) var(--space-3);
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: 1px solid transparent;
        transition: border-color 0.15s ease;
    }

    header.scrolled {
        border-bottom-color: var(--color-border);
    }
    a.now-link {
        display: inline-flex;
    }
    a.home {
        font-weight: 700;
        font-size: 1.5rem;

        span {
            color: var(--color-text);
        }
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: var(--space-1);
        justify-content: flex-end;
    }

    @media (min-width: 800px) {
        a.mobile {
            display: none;
        }
    }
</style>

<script>
    const header = document.querySelector('header');

    if (header) {
        window.addEventListener('scroll', () => {
            header.classList.toggle('scrolled', window.scrollY > 10);
        });
    }
</script>
