---
import ThemeToggle from './ThemeToggle.astro';
import MegaMenu from './MegaMenu.astro';
import Bolt from './icons/Bolt.svg';
---

<header class="top">
    <a class="home" href="/">M<span>.</span> <span class="sr-only">Go to homepage</span></a>

    <div class="header-right" role="navigation" aria-label="Header controls">
        <MegaMenu />
        <a class="now-link header-icon" href="/now" aria-label="Currently"><Bolt /></a>
        <ThemeToggle />
    </div>
</header>

<style>
    header {
        width: 100%;
        height: var(--header-height);
        position: sticky;
        top: 0;
        z-index: 200;
        background-color: var(--color-header);
        backdrop-filter: blur(12px);
        padding: var(--space-1) var(--space-3);
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--color-border);
        transition: border-color 0.15s ease;
    }

    a.home {
        color: var(--color-text);
        font-weight: 700;
        font-size: 1.5rem;

        span {
            color: var(--color-text);
        }
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: var(--space-0);
        justify-content: flex-end;
    }

    :global(.header-icon) {
        display: inline-flex;
        position: relative;
        width: 2.125rem;
        height: 2.125rem;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-sm);
        color: var(--color-text);

        svg {
            width: 1.375rem;
            height: 1.375rem;
        }
    }

    :global(.header-icon:hover, button.menu-toggle:hover .header-icon) {
        background-color: var(--color-bg-alt);
        color: var(--color-text-alt);
    }

    @media (min-width: 560px) {
        header {
            border-bottom: 1px solid transparent;
        }

        header.scrolled {
            border-bottom-color: var(--color-border);
        }
    }
</style>

<script>
    const header = document.querySelector('header');

    if (header) {
        window.addEventListener('scroll', () => {
            header.classList.toggle('scrolled', window.scrollY > 10);
        });
    }
</script>
