---
import ThemeToggle from './ThemeToggle.astro';
import MegaMenu from './MegaMenu.astro';
import Bolt from './icons/Bolt.svg';
---

<header class="top">
    <div class="header-inner">
        <a class="home" href="/"
            >M<span class="mobile">ournstera</span><span class="sr-only">Go to homepage</span></a
        >

        <div class="header-right" role="group" aria-label="Header controls">
            <MegaMenu />
            <a class="now-link header-icon" href="/now" aria-label="Currently"><Bolt /></a>
            <ThemeToggle />
        </div>
    </div>
</header>

<style>
    .mobile {
        display: none;
    }

    a {
        color: var(--text-alt); /* updated from --text-secondary */
        text-decoration: none;
    }
    a:hover {
        color: var(--purple-accent); /* updated from --accent-purple */
    }

    header {
        width: 100%;
        position: sticky;
        top: 0;
        z-index: 200;
        background-color: var(--bg-header);
        backdrop-filter: blur(9px);
        border-bottom: var(--1px) solid var(--border); /* updated from --border-purple */
        transition: border-color var(--cubic-smooth);
        height: var(--header-height);
        display: flex;
        align-items: center;
    }

    .header-inner {
        width: 100%;
        max-width: var(--layout-width);
        margin: 0 auto;
        padding: var(--space-2) var(--layout-padding);
        display: flex;
        gap: var(--space-3);
        justify-content: space-between;
        align-items: center;
        height: var(--header-height);
    }

    a.home {
        font-weight: 600;
        font-size: 1.25rem;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: var(--space-1);
        justify-content: flex-end;
    }

    a.now-link {
        display: inline-flex;
        padding: var(--2px);
    }

    @media (min-width: 704px) {
        header {
            border-bottom: var(--1px) solid transparent;
        }

        header.scrolled {
            border-bottom-color: var(--border); /* updated from --border-purple */
        }
        .mobile {
            display: inline;
        }
    }
</style>

<script>
    const header = document.querySelector('header');

    if (header) {
        window.addEventListener('scroll', () => {
            header.classList.toggle('scrolled', window.scrollY > 20);
        });
    }
</script>
