---
import ArrowUp from './icons/ArrowUp.svg';
---

<button class="scroll-to-top actions" type="button" aria-label="Scroll to top">
    <ArrowUp />
</button>

<style>
    button.actions {
        position: fixed;
        bottom: 3rem;
        right: 3rem;
        display: inline-flex;
        border-radius: var(--radius-sm);
        color: hsl(var(--bg-primary));
        background: hsl(var(--text-primary));
        width: 2.25rem;
        height: 2.25rem;
        align-items: center;
        justify-content: center;
        cursor: default;
        opacity: 0;
        transition: opacity 0.5s ease;
        pointer-events: none;

        &.visible {
            cursor: pointer;
            opacity: 1;
            pointer-events: auto;
        }
    }

    button.actions:focus-visible {
        outline: 3px solid hsl(var(--accent-primary));
        outline-offset: 3px;
    }
    @media (prefers-reduced-motion: reduce) {
        button.actions {
            transition: none;
        }
    }
</style>

<script src="/scripts/scroll.js" is:inline></script>
