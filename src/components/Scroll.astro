---
import ArrowUp from './icons/ArrowUp.svg';
---

<button class="scroll-to-top actions" type="button" aria-label="Scroll to top">
    <ArrowUp />
</button>

<style>
    button.actions {
        position: fixed;
        bottom: var(--space-md);
        right: var(--space-md);
        display: inline-flex;
        border-radius: var(--radius-sm);
        color: var(--bg-primary);
        background: var(--text-primary);
        width: 2.25rem;
        height: 2.25rem;
        align-items: center;
        justify-content: center;
        cursor: default;
        opacity: 0;
        transition: opacity var(--transition-md);
        pointer-events: none;

        &.visible {
            cursor: pointer;
            opacity: 1;
            pointer-events: auto;
        }
    }

    button.actions:focus-visible {
        outline: 3px solid var(--accent-primary);
        outline-offset: 3px;
    }
</style>

<script src="/scripts/scroll.js" is:inline></script>
